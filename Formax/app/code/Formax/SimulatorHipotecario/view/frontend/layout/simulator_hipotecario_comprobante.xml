<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Formax_SimulatorHipotecario::css/hipotecario.css"/>
	</head>
    <body>
        <referenceContainer name="content">
            <container name="hipotecario.container" htmlTag="div" htmlClass="page-main">
                <block class="Formax\SimulatorHipotecario\Block\ComprobanteHipotecario" name="comprobante" template="comprobante.phtml" />
            </container>            
        </referenceContainer>

        <referenceBlock name="header.panel" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        <referenceContainer name="xpec-header-search" remove="true"/>
        <referenceContainer name="footer" remove="true"/>
        <referenceBlock name="footer-block-afterall" remove="true"/>
        
        <referenceContainer name="xpec-header-logo" htmlClass="xpec-header-logo simulator-logo"/>
        <referenceContainer name="page.wrapper"  htmlClass="page-wrapper b-plomo"/>
    </body>
</page>
