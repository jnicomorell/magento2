    <body>
        <referenceContainer name="content">
            <container name="custom.container" htmlTag="div" htmlClass="container">
                <block class="Formax\SimulatorHipotecario\Block\SimulatorHipotecario" name="simulator.mype.form" template="simulator_hipotecario_form.phtml"/>
            </container>
        </referenceContainer>
        
        <referenceBlock name="header.panel" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        <referenceContainer name="xpec-header-search" remove="true"/>
        <referenceContainer name="footer" remove="true"/>
        <referenceBlock name="footer-block-afterall" remove="true"/>
        
        <referenceContainer name="xpec-header-logo" htmlClass="xpec-header-logo simulator-logo"/>
        <referenceContainer name="page.wrapper"  htmlClass="page-wrapper b-plomo simulator-page"/>
    </body>
</page>