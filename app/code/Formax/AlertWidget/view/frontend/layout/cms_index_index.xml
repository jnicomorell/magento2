    <head>
        <css src="Formax_AlertWidget::css/style.css" media="all"/>
    </head>
    <body>
        <referenceContainer name="page.wrapper">
            <container name="alert.custom.container" htmlTag="div" after="header.container">
                <block  class="Formax\AlertWidget\Block\Content\AlertWidget" name="content.alert.widget" template="Formax_AlertWidget::content/alert-widget.phtml"/>
            </container>
        </referenceContainer>
        
    </body>

</page>