<script>
require(["jquery", "vue"], function($, Vue) {

    // Creamos nuestra instancia de Vues
    var app = new Vue({
        el: '#app',
        data: {
            year: ' <?= $_year ?>',
            fileType: ' <?= $_type ?>',
            files: []
        },methods: {
            dropdown: function () {
                $(".coop-dropdown").addClass("show");
            },
            loadFiles(yearSelected){
                this.year=yearSelected;
                $.ajax({
                    url: '<?= $block->getUrl('archivos/informes/index') ?>',
                    type: 'POST',
                    datatype: 'json',
                    data: {
                        year: yearSelected,
                        fileType: app.fileType
                    },
                    beforeSend: function() {
                        $(".coop-dropdown.show").removeClass("show");
                    },
                    success: function(response) {
                        console.log(response);
                        try {
                            if (response == false || response == '') {
                                $('#modal-error').show();
                            } else {
                                app.files=response.files;
                            }
                        }catch(e){}
                    },
                    error: function() {
                    },
                    complete: function() {
                        $(".coop-dropdown.show").removeClass("show");
                    }
                });
            }
        }
    });

    app.loadFiles(app.year);

});
</script>

