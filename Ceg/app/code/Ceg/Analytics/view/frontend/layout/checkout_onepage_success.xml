        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="ceg.head.additional.gtm.success" template="Ceg_Analytics::gtm/success.phtml">
                <arguments>
                    <argument name="analytics_view_model" xsi:type="object">Ceg\Analytics\ViewModel\AnalyticsData</argument>
                    <argument name="config" xsi:type="string">gtm</argument>
                </arguments>
            </block>
            <block class="Ceg\Checkout\Block\Success" name="ceg.head.additional.fb.success" template="Ceg_Analytics::fb/success.phtml">
                <arguments>
                    <argument name="analytics_view_model" xsi:type="object">Ceg\Analytics\ViewModel\AnalyticsData</argument>
                    <argument name="config" xsi:type="string">fb</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
